# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your Apps
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_bucket.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Development Settings
# Set to 'true' only in local development to enable mock authentication
VITE_USE_MOCK_AUTH=false

# Firebase App Check (Production only)
# Get this from Firebase Console > App Check
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
