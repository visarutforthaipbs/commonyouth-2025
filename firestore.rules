rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can read any profile, but only update their own
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Groups collection - authenticated users can read, admins can write
    match /groups/{groupId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.token.email in ['demo@commonsyouth.org', 'admin@commonsyouth.org'] ||
         resource.data.ownerId == request.auth.uid);
    }
    
    // Activities collection - public read, authenticated write
    match /activities/{activityId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (request.auth.token.email in ['demo@commonsyouth.org', 'admin@commonsyouth.org'] ||
         resource.data.ownerId == request.auth.uid);
    }
    
    // Projects collection - public read, authenticated write
    match /projects/{projectId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (request.auth.token.email in ['demo@commonsyouth.org', 'admin@commonsyouth.org'] ||
         resource.data.ownerId == request.auth.uid);
    }
  }
}
